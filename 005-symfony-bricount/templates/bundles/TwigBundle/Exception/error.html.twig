{% extends 'base.html.twig' %}

{% block title %}
    Erreur {{ status_code }}
{% endblock %}

{% block body %}
    <div class="wallet-dashboard">
        <div class="card balance-card" style="max-width: 600px; margin: 40px auto;">
            <div class="card-header">
                <div class="card-header-group">
                    <h3>Oups ! Une erreur est survenue</h3>
                </div>
                <span class="name-pill debtor-pill">
                    Code {{ status_code }}
                </span>
            </div>

            <div class="card-body">
                <div class="alert-empty" style="padding: 50px 20px;">
                    <h2 style="margin-bottom: 20px;">
                        Erreur
                    </h2>

                    <p style="color: #666; margin-bottom: 30px;">
                        Une erreur s'est produite lors du traitement de votre requête.
                    </p>

                    <div class="actions">
                        <a href="{{ path('home') }}" class="btn-settle"
                           style="text-decoration: none; display: inline-block;">
                            Retourner à l'accueil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
