{% extends '_layouts/in_app.html.twig' %}

{% block title %}Mes Portefeuilles - Bricount{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>Liste des portefeuilles</h1>
        <div>
            <a href="{{ path('wallets_create') }}" class="btn btn-primary">
                <span class="icon">+</span> Cr√©er un portefeuille
            </a>
        </div>
    </div>

    <div class="wallet-grid">
        {% for wallet in wallets %}
            <div class="wallet-card">
                <a href="{{ path('wallets_show', {'uid': wallet.uid}) }}" class="wallet-link">
                    <div class="wallet-info">
                        <h2 class="wallet-label">{{ wallet.label }}</h2>
                        <p class="wallet-amount">
                            {{ (wallet.totalAmount / 100)|number_format(2, ',', ' ') }} ‚Ç¨
                        </p>
                    </div>
                </a>

                <div class="wallet-actions">
                    <a href="{{ path('wallets_edit', {'uid': wallet.uid}) }}" class="btn-icon">
                        ‚úèÔ∏è Modifier
                    </a>
                    <a href="{{ path('wallets_delete', {'uid': wallet.uid}) }}" class="btn-icon btn-danger">
                        üóëÔ∏è Supprimer
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
