{% extends '_layouts/in_app.html.twig' %}

{% block title %}Portefeuille {{ wallet.label }} - Bricount{% endblock %}

{% block content %}
    <h1>{{ wallet.label }}</h1>

    <div>
        <div>
            <h5 class="mb-0">Remboursements à effectuer</h5>
            <h6>Date du dernier règlement : {{ wallet.lastSettlementDate | date('d/m/Y H:i:s') }}</h6>
        </div>
        <div class="card-body">
            {% if balances is empty %}
                <div class="alert alert-success mb-0">
                    <i class="fas fa-check-circle"></i> Tout est en ordre ! Personne ne doit rien.
                </div>
            {% else %}
                <ul class="list-group list-group-flush">
                    {% for debtor, creditors in balances %}
                        {% for creditor, amount in creditors %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>
                                <strong class="text-danger">{{ debtor }}</strong>
                                doit à
                                <strong class="text-success">{{ creditor }}</strong>
                            </span>
                                <span class="badge bg-primary rounded-pill fs-6">
                                {{ (amount / 100)|number_format(2, ',', ' ') }} €
                            </span>
                            </li>
                        {% endfor %}
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>

    <div>
        <a href="{{ path('wallets_settle', {'uid': wallet.uid}) }}">
            Marquer comme réglé
        </a>
    </div>

    <div>
        <a href="{{ path('wallets_add_user', {"uid": wallet.uid}) }}">
            + Ajouter un utilisateur
        </a>
    </div>

    <div>
        <a href="{{ path('expenses_create', {"uid": wallet.uid}) }}">
            + Ajouter une dépense
        </a>
    </div>

    <div>
        <a href="{{ path('wallets_delete', {'uid': wallet.uid}) }}">
            Supprimer le portefeuille
        </a>
    </div>

    <h2>Montant total : {{ (wallet.totalAmount / 100)|number_format(2, ',', ' ') }} €</h2>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">Date</th>
            <th scope="col">Qui</th>
            <th scope="col">Libellé</th>
            <th scope="col">Montant</th>
        </tr>
        </thead>
        <tbody>
        {% for expense in expenses %}
            <tr>
                <td>{{ expense.createdDate | date('d/m/Y') }}</td>
                <td>{{ expense.createdBy.name }}</td>
                <td>{{ expense.description }}</td>
                <td>{{ (expense.amount / 100)|number_format(2, ',', ' ') }} €</td>
                <td><a href="{{ path("expenses_delete", {"wallet_uid": wallet.uid, "expense_uid": expense.uid}) }}">Supprimer
                        la dépense</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div>
        {% for i in 1..maxPaginationPage %}
            <a class="{% if page == i %}active{% endif %}"
               href="{{ path("wallets_show", {"uid": wallet.uid}) }}?page={{ i }}&limit={{ limit }}">
                {{ i }}
            </a>
        {% endfor %}
    </div>
{% endblock %}
