{% extends '_layouts/in_app.html.twig' %}

{% block title %}Portefeuille {{ wallet.label }} - Bricount{% endblock %}

{% block content %}
    <div class="page-header">
        <div>
            <h1>{{ wallet.label }}</h1>
            <p class="text-muted">
                D√©penses totales :
                <span class="total-highlight">
                {{ (wallet.totalAmount / 100)|number_format(2, ',', ' ') }} ‚Ç¨
            </span>
            </p>
        </div>
        <div class="header-actions">
            <a href="{{ path('expenses_create', {"uid": wallet.uid}) }}" class="btn-primary">
                <span>+</span> Ajouter une d√©pense
            </a>
            <a href="{{ path('wallets_add_user', {"uid": wallet.uid}) }}" class="btn-secondary">
                <span>üë§</span> Inviter
            </a>
        </div>
    </div>
    <div class="wallet-dashboard">
        <div class="card balance-card">
            <div class="card-header">
                <div class="card-header-group">
                    <h3>Remboursements √† effectuer</h3>
                    <span class="card-subtitle">
            Dernier r√®glement :
            <strong>{{ wallet.lastSettlementDate ? wallet.lastSettlementDate | date('d/m/Y') : 'Aucun' }}</strong>
        </span>
                </div>

                {% if balances is not empty %}
                    <a href="{{ path('wallets_settle', {'uid': wallet.uid}) }}" class="btn-settle">
                        Tout r√©gler
                    </a>
                {% endif %}
            </div>

            <div class="card-body">
                {% if balances is empty %}
                    <div class="alert-empty">
                        ‚úÖ Tout est en ordre ! Personne ne doit rien.
                    </div>
                {% else %}
                    <ul class="balance-list">
                        {% for debtor, creditors in balances %}
                            {% for creditor, amount in creditors %}
                                <li class="balance-item">
                                    <div class="balance-path">
                                        <span class="name-pill debtor-pill">{{ debtor }}</span>
                                        <span class="arrow-icon">‚Üí</span>
                                        <span class="name-pill creditor-pill">{{ creditor }}</span>
                                    </div>
                                    <span class="badge-amount">
                                    {{ (amount / 100)|number_format(2, ',', ' ') }} ‚Ç¨
                                </span>
                                </li>
                            {% endfor %}
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>

        <div class="table-container">
            <div class="table-header">
                <h2>Historique des d√©penses</h2>
            </div>
            <table class="modern-table">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Auteur</th>
                    <th>Libell√©</th>
                    <th>Montant</th>
                    <th class="text-right">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for expense in expenses %}
                    <tr>
                        <td class="col-date">{{ expense.createdDate | date('d/m/Y') }}</td>
                        <td><span class="user-pill">{{ expense.createdBy.name }}</span></td>
                        <td class="col-label">{{ expense.description }}</td>
                        <td class="col-amount">{{ (expense.amount / 100)|number_format(2, ',', ' ') }} ‚Ç¨</td>
                        <td>
                            <a href="{{ path("expenses_delete", {"wallet_uid": wallet.uid, "expense_uid": expense.uid}) }}"
                               class="btn-delete-table">
                                Supprimer
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {% if maxPaginationPage > 1 %}
                <div class="pagination">
                    {% for i in 1..maxPaginationPage %}
                        <a class="pagination-link {% if page == i %}active{% endif %}"
                           href="{{ path("wallets_show", {"uid": wallet.uid}) }}?page={{ i }}&limit={{ limit }}">
                            {{ i }}
                        </a>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <div class="danger-zone">
            <a href="{{ path('wallets_delete', {'uid': wallet.uid}) }}" class="btn-danger-outline">
                Supprimer le portefeuille
            </a>
        </div>
    </div>
{% endblock %}
