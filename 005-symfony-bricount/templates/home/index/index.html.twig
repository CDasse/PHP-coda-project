{% extends '_layouts/standard.html.twig' %}

{% block title %}Bricount - Gérez vos dépenses à plusieurs{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/home.css') }}">
{% endblock %}

{% block content %}
    <div class="home-wrapper">
        <main class="hero-section">
            <div class="hero-left">
                <h1 class="brand-name">Bricount</h1>
            </div>

            <div class="hero-right">
                <div class="content-box">
                    <span class="badge">Version 1.0 disponible</span>

                    <h2 class="main-title">
                        Les bons comptes font les <span class="gradient-text">bons amis.</span>
                    </h2>

                    <p class="description">
                        Bricount est la solution la plus simple pour gérer les dépenses partagées,
                        suivre qui doit quoi et équilibrer les budgets de vos vacances ou colocations.
                    </p>

                    <div class="cta-group">
                        <a href="/register" class="btn btn-primary">S'inscrire</a>
                        <a href="/login" class="btn btn-outline">Se connecter</a>
                    </div>
                </div>
            </div>
        </main>
    </div>
{% endblock %}
